<%= form_for(:user, :url => session_path(:user)) do |f| %>
  <p><%= f.text_field :email, class: 'form-control', placeholder:'Enter Your Email' %>
  <p><%= f.password_field :password , class: 'form-control',placeholder:'Enter Your Password' %>
  	
  <p class="form-label"><%= f.check_box :remember_me  %>
     <%= f.label :remember_me %>

  <p><%= f.submit 'Sign in', class:'btn btn-primary' %>
  <p class="form-label"><%= link_to "Forgot your password?", new_password_path(:user) %>
<% end %>