<div class ="container">

  <p id="notice"><%= notice %></p>

  <p>
    <strong>Activity:</strong>
    <%= @post_activity.activity.name%>
  </p>

  <p>
  <% if @post_activity.image? %> 
    <%= image_tag @post_activity.image.url(:medium) %>
  </p>
  <% else %>
  <% end %>
  <p>
    <strong>Points Awarded:</strong>
    <%= (@post_activity.act_mins * @post_activity.activity.pts_per_min).round(2) %>
  </p>


  <p>
    <strong>Description:</strong>
    <%= @post_activity.description %>
  </p>

  <p>
    <strong>Comments:</strong>
    <% @post_activity.comments.each do |c| %>
    <div> <%= c.content %>
    <%= c.created_at %>
  </div>


    <% end %>

  </p>
<% if user_signed_in? && current_user.id == @post_activity.user_id  %>
    <%= link_to 'All Posts', post_activities_path %>
    <%= link_to 'Edit', edit_post_activity_path %>
    <%= link_to 'Add Comment', new_post_activity_comment_path(@post_activity) %>
    <%= link_to 'Delete', post_activity_path, method: :delete, data: { Confirm: "Are you Sure?"} %>
<% elsif user_signed_in? %>
    <%= link_to 'All Posts', post_activities_path %>
    <%= link_to 'Add Comment', new_post_activity_comment_path(@post_activity) %>
<% else %>
    <%= link_to 'All Posts', post_activities_path %>
<% end %>


</div>

