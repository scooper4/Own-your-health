
<%= form_for (@post_activity), :html => { :multipart => true } do |f| %>

  <div class="field">
   <%= f.collection_select(:activity_id, Activity.all, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :act_mins %><br>
    <%= f.text_field :act_mins%>
  </div>
   <%= image_tag @post_activity.image.url(:thumb) %> 
  <div>
  <%= f.label "image upload" %><br> 
  <%= f.file_field :image %>
  </div>

   <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
