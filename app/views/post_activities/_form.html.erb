
<%= form_for (@post_activity) do |f| %>

  <div class="field">
   <%= f.collection_select(:activity_id, Activity.all, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :act_mins %><br>
    <%= f.text_field :act_mins%>
  </div>
    <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
