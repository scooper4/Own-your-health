
<%= form_for (@post_activity), :html => { :multipart => true } do |f| %>

  <div class="field">
   <%= f.collection_select(:activity_id, Activity.all, :id, :name, {prompt: "Select a workout"}, {class: "form-control"}) %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :act_mins %><br>
    <%= f.text_field :act_mins, class: 'form-control'%>
  </div>
  <% if @post_activity.image? %>
   <%= image_tag @post_activity.image.url(:thumb) %> 
  <% else %>
  <% end %> 
  <div>
  <%= f.label "image upload" %><br> 
  <%= f.file_field :image %>
  </div>
    <br>
   <div class="actions">
    <%= f.submit "Submit", class: 'btn btn-default btn-primary' %>
  </div>
<% end %>
